if BOARD_MSI_5128 

config BOARD_SPECIFIC_OPTIONS
	def_bool y
	select ACPI_NO_CUSTOM_MADT
	select CPU_INTEL_P5
	select NORTHBRIDGE_INTEL_I430HX
	select SOUTHBRIDGE_INTEL_I82371SB
	select SUPERIO_WINBOND_W83877F
	select HAVE_PIRQ_TABLE
	select BOARD_ROMSIZE_KB_256
	select HAVE_OPTION_TABLE

config MAX_CPUS
	int
	default 1

config MAINBOARD_DIR
	default "msi/ms5128"

config MAINBOARD_PART_NUMBER
	default "MS-5128" if BOARD_MSI_5128

config VARIANT_DIR
	default "ms5128" if BOARD_MSI_5128

config OVERRIDE_DEVICETREE
	default "variants/\$(CONFIG_VARIANT_DIR)/overridetree.cb"

config IRQ_SLOT_COUNT
	int
	default 6

endif
